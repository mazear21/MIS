{% extends 'base.html' %} {% block title %}Manage Subjects - MIS System{% endblock %} {% block
content %}
<div class="container">
  <!-- Page Header -->
  <div class="page-header">
    <div class="row align-items-center">
      <div class="col">
        <h2><i class="bi bi-journal-bookmark me-2"></i>Subject Management</h2>
        <p class="text-muted mb-0">Manage subjects for all sections</p>
      </div>
      <div class="col-auto">
        <button
          type="button"
          class="btn btn-primary"
          data-bs-toggle="modal"
          data-bs-target="#addSubjectModal"
        >
          <i class="bi bi-plus-lg me-1"></i>Add Subject
        </button>
      </div>
    </div>
  </div>

  <!-- Stats -->
  <div class="row mb-4 g-3">
    <div class="col-6 col-md-4">
      <div class="card border-0 bg-light text-center py-3">
        <div class="fs-3 fw-bold text-dark">{{ subjects|length }}</div>
        <small class="text-muted">Total Subjects</small>
      </div>
    </div>
    <div class="col-6 col-md-4">
      <div class="card border-0 bg-light text-center py-3">
        <div class="fs-3 fw-bold text-dark">{{ subjects|sum(attribute='assignment_count') }}</div>
        <small class="text-muted">Class Assignments</small>
      </div>
    </div>
    <div class="col-6 col-md-4">
      <div class="card border-0 bg-light text-center py-3">
        <div class="fs-3 fw-bold text-dark">
          {{ subjects|selectattr('assignment_count', 'equalto', 0)|list|length }}
        </div>
        <small class="text-muted">Unassigned</small>
      </div>
    </div>
  </div>

  <!-- Subjects List (General Definitions) -->
  <div class="card">
    <div class="card-header bg-white">
      <h6 class="mb-0"><i class="bi bi-list-ul me-2"></i>All Subjects (General Definitions)</h6>
      <small class="text-muted">Subjects are assigned to classes from the Teachers page</small>
    </div>
    <div class="table-responsive">
      <table class="table table-hover mb-0">
        <thead class="table-light">
          <tr>
            <th width="30%">Subject Name</th>
            <th width="40%">Description</th>
            <th width="15%" class="text-center">Assignments</th>
            <th width="15%" class="text-end">Actions</th>
          </tr>
        </thead>
        <tbody>
          {% for subject in subjects %}
          <tr id="subject-row-{{ subject.id }}">
            <td>
              <strong class="subject-name">{{ subject.name }}</strong>
            </td>
            <td>
              <small class="text-muted">{{ subject.description or 'No description' }}</small>
            </td>
            <td class="text-center">
              {% if subject.assignment_count > 0 %}
              <span class="badge bg-success">{{ subject.assignment_count }} classes</span>
              <br /><small class="text-muted">{{ subject.assignments }}</small>
              {% else %}
              <span class="badge bg-secondary">Not assigned</span>
              {% endif %}
            </td>
            <td class="text-end">
              <button
                class="btn btn-sm btn-outline-secondary edit-subject-btn"
                data-id="{{ subject.id }}"
                data-name="{{ subject.name }}"
                data-description="{{ subject.description or '' }}"
              >
                <i class="bi bi-pencil"></i>
              </button>
              <form
                action="{{ url_for('admin_delete_subject', subject_id=subject.id) }}"
                method="POST"
                class="d-inline"
                onsubmit="return confirm('Delete {{ subject.name }}? This will remove all assignments.');"
              >
                <button type="submit" class="btn btn-sm btn-outline-danger">
                  <i class="bi bi-trash"></i>
                </button>
              </form>
            </td>
          </tr>
          {% else %}
          <tr>
            <td colspan="4" class="text-center text-muted py-4">No subjects defined</td>
          </tr>
          {% endfor %}
        </tbody>
      </table>
    </div>
  </div>

  <div class="alert alert-info mt-3">
    <i class="bi bi-info-circle me-2"></i>
    <strong>Note:</strong> Subjects are general definitions. To assign them to specific classes and
    teachers, go to the
    <a href="{{ url_for('admin_teachers') }}" class="alert-link">Teachers</a> tab.
  </div>
</div>

<!-- Add Subject Modal -->
<div class="modal fade" id="addSubjectModal" tabindex="-1">
  <div class="modal-dialog modal-dialog-centered">
    <div class="modal-content">
      <div
        class="modal-header"
        style="background: linear-gradient(135deg, #0000ff 0%, #0000cc 100%); color: white"
      >
        <h5 class="modal-title"><i class="bi bi-journal-plus me-2"></i>Add New Subject</h5>
        <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal"></button>
      </div>
      <form id="addSubjectForm">
        <div class="modal-body">
          <div class="mb-3">
            <label class="form-label">Subject Name <span class="text-danger">*</span></label>
            <input
              type="text"
              name="name"
              id="addSubjectName"
              class="form-control"
              required
              placeholder="e.g., Advanced Database"
            />
          </div>
          <div class="mb-3">
            <label class="form-label">Description</label>
            <textarea
              name="description"
              id="addSubjectDescription"
              class="form-control"
              rows="3"
              placeholder="Brief description of the subject"
            ></textarea>
          </div>
          <div class="alert alert-info mb-0">
            <i class="bi bi-info-circle me-2"></i>
            <small
              >Subject definitions are general. Assign them to specific classes from the Teachers
              page.</small
            >
          </div>
        </div>
        <div class="modal-footer">
          <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
          <button type="submit" class="btn btn-primary" id="addSubjectBtn">
            <i class="bi bi-plus-lg me-1"></i>Add Subject
          </button>
        </div>
      </form>
    </div>
  </div>
</div>

<!-- Edit Subject Modal -->
<div class="modal fade" id="editSubjectModal" tabindex="-1">
  <div class="modal-dialog modal-dialog-centered">
    <div class="modal-content">
      <div
        class="modal-header"
        style="background: linear-gradient(135deg, #0000ff 0%, #0000cc 100%); color: white"
      >
        <h5 class="modal-title"><i class="bi bi-pencil-square me-2"></i>Edit Subject</h5>
        <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal"></button>
      </div>
      <form id="editSubjectForm">
        <input type="hidden" id="editSubjectId" name="subject_id" />
        <div class="modal-body">
          <div class="mb-3">
            <label class="form-label">Subject Name <span class="text-danger">*</span></label>
            <input type="text" name="name" id="editSubjectName" class="form-control" required />
          </div>
          <div class="mb-3">
            <label class="form-label">Description</label>
            <textarea
              name="description"
              id="editSubjectDescription"
              class="form-control"
              rows="3"
            ></textarea>
          </div>
        </div>
        <div class="modal-footer">
          <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
          <button type="submit" class="btn btn-primary" id="saveSubjectBtn">
            <i class="bi bi-check-lg me-1"></i>Save Changes
          </button>
        </div>
      </form>
    </div>
  </div>
</div>

<!-- Toast -->
<div class="toast-container position-fixed bottom-0 end-0 p-3">
  <div id="successToast" class="toast align-items-center text-bg-success border-0" role="alert">
    <div class="d-flex">
      <div class="toast-body">
        <i class="bi bi-check-circle me-2"></i><span id="toastMessage">Success!</span>
      </div>
      <button
        type="button"
        class="btn-close btn-close-white me-2 m-auto"
        data-bs-dismiss="toast"
      ></button>
    </div>
  </div>
</div>
{% endblock %} {% block extra_js %}
<script>
  document.addEventListener('DOMContentLoaded', function () {
    const editModal = new bootstrap.Modal(document.getElementById('editSubjectModal'));
    const addModal = new bootstrap.Modal(document.getElementById('addSubjectModal'));
    const toast = new bootstrap.Toast(document.getElementById('successToast'));

    // Edit Subject Button Click
    document.querySelectorAll('.edit-subject-btn').forEach((btn) => {
      btn.addEventListener('click', function () {
        document.getElementById('editSubjectId').value = this.dataset.id;
        document.getElementById('editSubjectName').value = this.dataset.name;
        document.getElementById('editSubjectDescription').value = this.dataset.description || '';
        editModal.show();
      });
    });

    // Edit Subject Form Submit
    document.getElementById('editSubjectForm').addEventListener('submit', function (e) {
      e.preventDefault();

      const formData = new FormData(this);
      const subjectId = formData.get('subject_id');
      const saveBtn = document.getElementById('saveSubjectBtn');

      saveBtn.disabled = true;
      saveBtn.innerHTML = '<span class="spinner-border spinner-border-sm me-1"></span>Saving...';

      fetch('/admin/subjects/' + subjectId + '/edit-ajax', {
        method: 'POST',
        body: formData,
      })
        .then((response) => response.json())
        .then((data) => {
          if (data.success) {
            editModal.hide();
            document.getElementById('toastMessage').textContent = data.message;
            toast.show();
            setTimeout(() => location.reload(), 1000);
          } else {
            alert('Error: ' + data.message);
          }
        })
        .catch((error) => {
          console.error('Error:', error);
          alert('An error occurred.');
        })
        .finally(() => {
          saveBtn.disabled = false;
          saveBtn.innerHTML = '<i class="bi bi-check-lg me-1"></i>Save Changes';
        });
    });

    // Add Subject Form Submit
    document.getElementById('addSubjectForm').addEventListener('submit', function (e) {
      e.preventDefault();

      const formData = new FormData(this);
      const addBtn = document.getElementById('addSubjectBtn');

      addBtn.disabled = true;
      addBtn.innerHTML = '<span class="spinner-border spinner-border-sm me-1"></span>Adding...';

      fetch('/admin/subjects/add-ajax', {
        method: 'POST',
        body: formData,
      })
        .then((response) => response.json())
        .then((data) => {
          if (data.success) {
            addModal.hide();
            document.getElementById('toastMessage').textContent = data.message;
            toast.show();
            setTimeout(() => location.reload(), 1000);
          } else {
            alert('Error: ' + data.message);
          }
        })
        .catch((error) => {
          console.error('Error:', error);
          alert('An error occurred.');
        })
        .finally(() => {
          addBtn.disabled = false;
          addBtn.innerHTML = '<i class="bi bi-plus-lg me-1"></i>Add Subject';
        });
    });
  });
</script>
{% endblock %}
